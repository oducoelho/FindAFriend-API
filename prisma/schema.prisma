generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String  @id @default(uuid())
  name          String
  email         String  @unique
  cep           Decimal
  endereco      String
  whatsapp      Decimal
  password_hash String

  created_at DateTime @default(now())

  pets Pet[]

  @@map("organizations")
}

model Pet {
  id          String @id @default(uuid())
  name        String
  description String
  age         String
  port        String
  energy      String

  created_at DateTime @default(now())

  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String

  @@map("pets")
}
